<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".TongQuanFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="@android:color/white"
                android:elevation="4dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/taphoa"
                    android:layout_marginEnd="16dp"/>

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="NAZARICK"
                    android:textColor="#1976D2"
                    android:textSize="48sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Thống kê tổng quan -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thống kê tổng quan"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333"
                android:layout_marginBottom="12dp"/>

            <!-- Hàng đầu: Tổng hóa đơn và Doanh thu -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <!-- Card Tổng hóa đơn -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:background="#4CAF50">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tổng hóa đơn"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:id="@+id/tvTongHoaDon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@android:color/white"
                            android:textSize="24sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Card Tổng doanh thu -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:background="#2196F3">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Doanh thu"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:id="@+id/tvDoanhThu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@android:color/white"
                            android:textSize="24sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Card Giá trị hàng tồn kho -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#FF9800">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giá trị hàng tồn kho"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/tvGiaTriKho"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 VNĐ"
                        android:textColor="@android:color/white"
                        android:textSize="24sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Biểu đồ doanh thu -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Biểu đồ doanh thu"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333"
                android:layout_marginBottom="12dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@android:color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Doanh thu 7 ngày gần nhất"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#666"
                        android:layout_marginBottom="8dp"/>

                    <FrameLayout
                        android:id="@+id/chartContainer"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/barChart"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </FrameLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Hàng bán chạy -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Top doanh thu"
                android:textColor="#333"
                android:textSize="20sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@android:color/white">

                    <!-- Item 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:background="#F9F9F9"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="1"
                            android:gravity="center"
                            android:background="#FFD700"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:id="@+id/tvTop1Name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chưa có dữ liệu"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#333"/>

                            <TextView
                                android:id="@+id/tvTop1Quantity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Đã bán: 0 sản phẩm"
                                android:textSize="14sp"
                                android:textColor="#666"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvTop1Revenue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#4CAF50"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                    <!-- Item 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:background="#F9F9F9"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="2"
                            android:gravity="center"
                            android:background="#C0C0C0"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:id="@+id/tvTop2Name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chưa có dữ liệu"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#333"/>

                            <TextView
                                android:id="@+id/tvTop2Quantity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Đã bán: 0 sản phẩm"
                                android:textSize="14sp"
                                android:textColor="#666"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvTop2Revenue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#4CAF50"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                    <!-- Item 3 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:background="#F9F9F9">

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:text="3"
                            android:gravity="center"
                            android:background="#CD7F32"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:id="@+id/tvTop3Name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chưa có dữ liệu"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#333"/>

                            <TextView
                                android:id="@+id/tvTop3Quantity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Đã bán: 0 sản phẩm"
                                android:textSize="14sp"
                                android:textColor="#666"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvTop3Revenue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#4CAF50"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</FrameLayout>