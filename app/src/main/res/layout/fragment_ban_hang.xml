<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_ban_hang_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".BanHangFragment">

    <!-- Tiêu đề -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/header_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Bán hàng"
            android:textColor="@color/header_text"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center" />
    </LinearLayout>

    <!-- Nội dung cuộn -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="64dp"
        android:fillViewport="true"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Card: Chọn sản phẩm -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Chọn sản phẩm -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Chọn sản phẩm:"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary" />

                        <Spinner
                            android:id="@+id/spinner_sp"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"

                            android:paddingStart="12dp" />
                    </LinearLayout>

                    <!-- Sản phẩm & Số lượng -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sản phẩm:"
                                android:textSize="15sp"
                                android:textColor="@color/text_secondary" />

                            <EditText
                                android:id="@+id/edit_sp"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_marginTop="4dp"

                                android:ems="10"
                                android:inputType="text"
                                android:padding="12dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Số lượng:"
                                android:textSize="15sp"
                                android:textColor="@color/text_secondary" />

                            <EditText
                                android:id="@+id/edit_soluong"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_marginTop="4dp"

                                android:ems="10"
                                android:inputType="number"
                                android:padding="12dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Nút thêm -->
                    <Button
                        android:id="@+id/btn_addsp"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="16dp"
                        android:text="THÊM SẢN PHẨM"
                        android:textSize="16sp"
                        android:backgroundTint="#8BC34A"
                        android:textColor="#FFFFFF"
                        style="?android:attr/buttonStyle" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Danh sách sản phẩm đã mua -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/divider_color"
                        android:gravity="center"
                        android:padding="12dp"
                        android:text="CÁC SẢN PHẨM ĐÃ MUA"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <ListView
                        android:id="@+id/lv"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:divider="@color/divider_color"
                        android:dividerHeight="1dp"
                        android:padding="8dp"
                        android:clipToPadding="false" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Tính tiền & Tổng tiền -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <Button
                        android:id="@+id/btn_tinhtien"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="TÍNH TIỀN"
                        android:textSize="16sp"
                        android:backgroundTint="#2196F3"
                        android:textColor="#FFFFFF" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="183dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tổng tiền thanh toán:"
                            android:textColor="@color/text_primary"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/edit_tienthanhtoan"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:background="@android:color/transparent"
                            android:ems="10"
                            android:enabled="false"
                            android:gravity="end"
                            android:inputType="text"
                            android:text="0 VNĐ"
                            android:textColor="#8BC34A"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>